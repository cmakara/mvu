{
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": ["eslint:recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "sourceType": "module",
      "codeFrame": false
    },
    "rules": {
      "no-console": "off",
      "no-case-declarations": "off",
      "camelcase": "warn",
      "eqeqeq": "error",
      "semi": [2, "never"],
      "indent": ["error", 2]
    }
  }
